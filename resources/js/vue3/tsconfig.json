{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["es6", "dom", "ES2020"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": false,
        "jsx": "preserve",
    },
    "exclude": ["node_modules"],
    "include": [
        "./**/*.ts", 
        "./**/*.d.ts", 
        "./**/*.tsx", 
        "./**/*.vue", 
        "./**/*.js"
    ]
}
