{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["es6", "ES2020"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": false,
        "jsx": "react-jsx",
    },
    "include": [
        "packages/**/*.ts", 
        "packages/**/*.d.ts", 
        "packages/**/*.tsx", 
        "packages/**/*.js"
    ]
}
